<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.milinda.searchbar.SearchBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:SearchBarEdittextHintContent="sku编码"
        />

    <com.milinda.searchbar.SearchBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:SearchBarType="1"
        app:SearchBarEdittextHintContent="sku1编码"
        />

    <com.milinda.searchbar.SearchBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:SearchBarType="2"
        app:SearchBarEdittextHintContent="sku2编码"
        />

    <com.milinda.searchbar.SearchBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:SearchBarType="3"
        app:SearchBarEdittextHintContent="sku3编码"
        />

    <com.milinda.searchbar.SearchBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:SearchBarType="4"
        app:SearchBarEdittextHintContent="sku4编码"
        />


    <com.milinda.descriptiontext.DescriptionText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:DescriptionTextType="0"
        app:DescriptionTextLeftTextCotent="测试"
        app:DescriptionTextLeftTextColor="@color/colorPrimary"
        app:DescriptionTextLeftTextSize="@dimen/textsize_sp_25"
        />

    <com.milinda.descriptiontext.DescriptionText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:DescriptionTextType="1"
        app:DescriptionTextLeftTextCotent="sku名称"
        app:DescriptionTextRightTextCotent="小米手机"
        app:DescriptionTextRightGravity="left"
        app:DescriptionTextPadding="@dimen/padding_dp_14"
        app:DescriptionTextBottomPadding="@dimen/padding_dp_5"
        />

    <com.milinda.descriptiontext.DescriptionText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:DescriptionTextType="2"
        app:DescriptionTextLeftTextCotent="sku编码"
        app:DescriptionTextRightTextCotent="003294"
        app:DescriptionTextRightGravity="right"
        app:DescriptionTextPadding="@dimen/padding_dp_14"
        app:DescriptionTextBottomPadding="@dimen/padding_dp_5"
        />

    <com.milinda.descriptiontext.DescriptionText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:DescriptionTextType="3"
        app:DescriptionTextLeftTextCotent="货品等级"
        app:DescriptionTextRightTextCotent="合格品"
        app:DescriptionTextRightGravity="right"
        app:DescriptionTextLeftDrawable="@drawable/ic_inbound_number"
        app:DescriptionTextPadding="@dimen/padding_dp_14"
        app:DescriptionTextBottomPadding="@dimen/padding_dp_10"
        />


</LinearLayout>